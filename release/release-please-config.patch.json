{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"description": "Auto-Generated Release Please configuration for patch",
	"pull-request-title-pattern": "chore: patch release prepared",
	"pull-request-header": "chore: patch release prepared",
	"pull-request-footer": "This PR was generated by the prepare-release GHA",
	"release-type": "node",
	"versioning": "always-bump-patch",
	"packages": {
		"packages/messaging-models": {
			"package-name": "messaging-models",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/messaging-connector-aws": {
			"package-name": "messaging-connector-aws",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/messaging-connector-entity-storage": {
			"package-name": "messaging-connector-entity-storage",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/messaging-service": {
			"package-name": "messaging-service",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"messaging-models",
				"messaging-connector-aws",
				"messaging-connector-entity-storage",
				"messaging-service"
			]
		}
	]
}
